<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.newschool.fragment.HomeworkFragment1">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/HomeworkFragment1_freshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/HomeworkFragment1_issueTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="5月3日 发布的作业" />

                <TextView
                    android:id="@+id/HomeworkFragment1_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:text="这是作业标题"
                    android:textColor="#000"
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/HomeworkFragment1_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#01c72f"
                    android:padding="6dp"
                    android:text="提交期限：2018-04-05  11:11"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/HomeworkFragment1_subTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="这是说明"
                    android:textColor="#000" />

                <LinearLayout
                    android:id="@+id/HomeworkFragment1_DoneOrNot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/HomeworkFragment1_textDone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#000"
                            android:textSize="40sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="完成"
                            android:textColor="#000"
                            android:textSize="10sp" />
                    </LinearLayout>


                    <View
                        android:layout_width="1dp"
                        android:layout_height="66dp"
                        android:layout_gravity="center_vertical"
                        android:background="#000" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/HomeworkFragment1_textNot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#000"
                            android:textSize="40sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未完成"
                            android:textColor="#000"
                            android:textSize="10sp" />
                    </LinearLayout>

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/HomeworkFragment1_recyclerViewNotDone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#38000000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="附件" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/HomeworkFragment1_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp" />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</FrameLayout>
