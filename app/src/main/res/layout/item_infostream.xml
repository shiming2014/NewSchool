<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_infoStream_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_infoStream_img"
                android:layout_width="@dimen/dp46"
                android:layout_height="46dp"
                android:background="@color/colorPrimaryDark"
                android:padding="@dimen/dp_12"
                android:src="@drawable/baseline_pets_24"
                android:tint="@color/white" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp46"
                        android:layout_weight="8"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/item_infoStream_Name"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingLeft="16dp"
                            android:text="Jerry Song"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/item_infoStream_issueDate"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingLeft="16dp"
                            android:text="5月3日"
                            android:textColor="#000000"
                            android:textSize="16sp" />
                    </LinearLayout>


                    <ImageView
                        android:id="@+id/item_infoStream_more"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp46"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:padding="2dp"
                        android:src="@drawable/baseline_more_vert_24" />
                </LinearLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>

        <Button
            android:id="@+id/item_infoStream_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="这是主题" />

        <TextView
            android:id="@+id/item_infoStream_deadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:paddingLeft="6dp"
            android:text="提交期限：5月3日 下午11：59" />

        <TextView
            android:id="@+id/item_infoStream_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="6dp"
            android:text="这是题目"
            android:textColor="#000"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/item_infoStream_subTite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="2dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="这是题目说明"
            android:textColor="#000" />

        <TextView
            android:id="@+id/item_infoStream_attachment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_attachment_24"
            android:text="1 个附件"
            android:textColor="#000" />

        <LinearLayout
            android:id="@+id/item_infoStream_DoneOrNot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_infoStream_textDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#000"
                    android:textSize="40sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="完成"
                    android:textColor="#000"
                    android:textSize="10sp" />
            </LinearLayout>


            <View
                android:layout_width="1dp"
                android:layout_height="66dp"
                android:layout_gravity="center_vertical"
                android:background="#000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_infoStream_textNot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#000"
                    android:textSize="40sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未完成"
                    android:textColor="#000"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7dd5d6d6"
            android:padding="10dp"
            android:text="添加课程评论"
            android:textSize="14sp" />

    </LinearLayout>
</android.support.v7.widget.CardView>
