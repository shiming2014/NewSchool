<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:layout_marginTop="1dp"
    android:id="@+id/item_homework_card"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:id="@+id/item_homework_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF5722"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:textColor="#cfcece"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="#作业# "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_homework_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="1411030206宋世铭"
                android:textColor="@color/white" />

            <TextView
                android:visibility="gone"
                android:id="@+id/item_homework_yes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/baseline_check_circle_24"
                android:drawableTint="#DCEDC8"
                android:gravity="center|right"
                android:text="已批改"
                android:textColor="#DCEDC8" />

            <TextView
                android:id="@+id/item_homework_no"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/baseline_error_24"
                android:drawableTint="#FBE9E7"
                android:gravity="center|right"
                android:text="未批改"
                android:textColor="#FBE9E7" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0c000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_homework_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="得分：未批改"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/item_homework_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-06-02 13:03"
                android:layout_weight="1"
                android:paddingRight="16dp"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:gravity="center_vertical|right"/>
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
