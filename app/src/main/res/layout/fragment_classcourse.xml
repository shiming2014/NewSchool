<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7bffffff"
    tools:context="com.example.newschool.fragment.ClassCourseFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/fragment_about_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="16dp"
                            android:gravity="center_vertical"
                            android:text="软件测试"
                            android:textColor="#000"
                            android:textSize="26sp" />

                        <TextView
                            android:id="@+id/fragment_about_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableRight="@drawable/baseline_create_24"
                            android:padding="16dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/fragment_about_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:drawablePadding="16dp"
                        android:drawableStart="@drawable/baseline_alarm_on_24"
                        android:drawableTint="#ff9800"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:text="上课时间待添加"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/fragment_about_location"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:drawableLeft="@drawable/baseline_location_on_24"
                        android:drawablePadding="16dp"
                        android:drawableTint="#ff5722"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:text="上课地点待添加"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/fragment_about_calendar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:drawableLeft="@drawable/baseline_calendar_today_24"
                        android:drawablePadding="16dp"
                        android:drawableRight="@drawable/baseline_open_in_new_24"
                        android:drawableTint="#01579b"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:text="打开日历"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="资料"
                android:textSize="13sp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/fragment_about_share"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="#3f51b5"
                    android:drawableLeft="@drawable/baseline_share_24"
                    android:drawablePadding="16dp"
                    android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
                    android:drawableTint="#fff"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:text="同学们的分享"
                    android:textColor="#fff"
                    android:textSize="16sp" />
            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="教师"
                android:textSize="13sp" />

            <android.support.v7.widget.CardView
                android:id="@+id/fragment_about_cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="?attr/colorPrimary"
                        android:padding="10dp"
                        android:src="@drawable/logo_white"
                        android:tint="@color/white" />

                    <LinearLayout
                        android:id="@+id/fragment_about_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/fragment_about_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="16dp"
                            android:text="教师姓名：Jarry Song"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/fragment_about_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="16dp"
                            android:text="教师手机：18341313489"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/fragment_about_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="16dp"
                            android:text="教师邮箱：1073119510@qq.com"
                            android:textColor="#000" />
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
