<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_signList_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_signList_imgView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:background="?attr/colorPrimary"
            android:padding="16dp"
            android:src="@drawable/baseline_assignment_turned_in_24"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/item_signList_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="6dp"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
            android:gravity="center_vertical"
            android:text="第一次签到第一次签到第一次签到第一次签到第一次签到第一次签到第一次签到第一次签到第一次签到第一次"
            android:textColor="#000"
            android:textSize="16sp" />


    </LinearLayout>
</android.support.v7.widget.CardView>
