<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.newschool.activity.AddcourseActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/AddCourseActivity_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:navigationIcon="@drawable/baseline_clear_24"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="创建课程" />

    </android.support.design.widget.AppBarLayout>

    <ProgressBar
        android:id="@+id/AddCourseActivity_progressBar"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:indeterminate="true"
        android:indeterminateBehavior="repeat"
        android:visibility="gone" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/AddCourseActivity_courseNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="6dp"
        android:theme="@style/add_course"
        app:counterEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/AddCourseActivity_courseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="课程名称/Course Name"
            android:inputType="text"
            android:textColor="#2b2b2b" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/AddCourseActivity_classNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="6dp"
        android:theme="@style/add_course"
        app:counterEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/AddCourseActivity_className"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="授课班级/Class Name"
            android:inputType="text"
            android:textColor="#2b2b2b" />
    </android.support.design.widget.TextInputLayout>
</LinearLayout>
